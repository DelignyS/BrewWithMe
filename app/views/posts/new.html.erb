<div class="container d-flex align-items-center" style="max-width: 80%; height: 75vh; margin-bottom: 2rem; background-color: #F5DEB3; padding: 2rem; border-radius: 15px;">
  <div style="display: flex; justify-content: center; align-items: center; width: 100%;">
    <%= form_for @post, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control', style: 'font-size: 1.5rem;' %>
      </div>
      <div class="form-group">
        <%= f.label :content, class: 'control-label' %>
        <%= f.text_area :content, class: 'form-control', style: 'font-size: 1.5rem; height: 15rem;' %>
      </div>
      <%= f.submit "Create", class: 'btn btn-dark' %>
    <% end %>
  </div>
</div>